# 数据库配置（连接到现有的 newapi MySQL）
DB_HOST=your-newapi-mysql-host
DB_PORT=3306
DB_NAME=new-api
DB_USER_RO=newapi_ro
DB_PASS_RO=********
DB_USER_AGG=root
DB_PASS_AGG=123456

# Redis 配置
REDIS_URL=redis://redis:6379/0

# API 配置
API_PORT=8080
CACHE_TTL_SECONDS=60

# 风控规则默认配置
BURST_WINDOW_SEC=60
BURST_LIMIT_PER_TOKEN=120
IP_USERS_THRESHOLD=5
TOKEN_MULTI_USER_THRESHOLD=2
BIG_REQUEST_SIGMA=3

# 告警配置
ALERT_WEBHOOK_URL=
# 支持的告警类型：dingtalk, feishu, wechat_work
ALERT_TYPE=dingtalk

# 可选：Prometheus 监控
ENABLE_METRICS=false

# 可选：Superset 配置
SUPERSET_SECRET_KEY=your-secret-key-here

# 日志级别
LOG_LEVEL=INFO
